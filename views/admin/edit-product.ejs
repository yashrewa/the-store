<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product <% } else { %>add-product <% } %>"
            method="POST">
            <div class="form-control">
                <%if (editing) {%>
                <input type="hidden" value="<%=product.id%>" name="productId">
                <%}%>
                <label for="title" class="title"></label>
                <input type="text" name="title" id="title" placeholder="name"
                    value="<%if (editing) {%> <%=product.title%><% } %>"> </input>
                <label for="price" class="title"></label>
                <input type="number" name="price" step="0.01" id="title" placeholder="price"
                    value="<%if (editing) { %> <%=product.price%> <% } %> "> </input>
                <label for="description" class="title"></label>
                <input type="text" name="description" id="title" placeholder="description"
                    value="<%if (editing) { %>  <%= product.description %> <% } %>"></input>
                <label for="imagelink" class="title"></label>
                <input type="text" name="imagelink" id="title" placeholder="imagelink"
                    value="<%if (editing) { %>  <%= product.imagelink %> <% } %>"></input>
            </div>   
            <button type="submit" class="btn"><%if (editing) { %> Edit Product <% } else { %>Add Product <%}%></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>